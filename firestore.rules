rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /projects/{projectId} {
      // Allow read if user is owner or collaborator
      allow read: if request.auth != null &&
        (resource.data.owner == request.auth.uid ||
         resource.data.collaborators[request.auth.uid] != null);
      
      // Allow create if user is authenticated (they become the owner)
      allow create: if request.auth != null &&
        request.resource.data.owner == request.auth.uid;
      
      // Allow update if user is owner
      allow update: if request.auth != null &&
        resource.data.owner == request.auth.uid;
      
      // Allow delete if user is owner
      allow delete: if request.auth != null &&
        resource.data.owner == request.auth.uid;
    }
  }
} 
