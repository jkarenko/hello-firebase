{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/helloWorld",
        "function": "helloWorld"
      },
      {
        "source": "/greet/**",
        "function": "greet"
      },
      {
        "source": "/roll/**",
        "function": "rollDice"
      },
      {
        "source": "/getSongVersions",
        "function": "getSongVersions"
      },
      {
        "source": "/player",
        "destination": "/player.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
