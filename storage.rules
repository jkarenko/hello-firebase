rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /audio/{projectId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
                  && request.resource.size < 10 * 1024 * 1024  // Limit file size to 10MB
                  && request.resource.contentType.matches('audio/.*')  // Ensure it's an audio file
                  && request.method == 'create';  // Only allow new file creation
    }
    match /{allPaths=**} {
      allow read, write: if false;  // Keep other paths restricted
    }
  }
} 
